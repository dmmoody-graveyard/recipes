<h3>Recipes in the "<%= @category.name %>" category</h3>

<% if @category.recipes().any?() %>
<ul>
  <% @category.recipes().each() do |recipe| %>
    <li><a href="/recipes/<%= recipe.id %>"><%= recipe.name %></a></li>
  <% end %>
</ul>
<% end %>

<hr>

<a href='/' class='btn btn-default'>Back to Home Page</a>
